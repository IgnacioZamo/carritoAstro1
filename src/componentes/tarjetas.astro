---
import datos from "../componentes/productos.json";

---

<div class="px-10 mx-auto grid lg:grid-cols-3 sm:grid-cols-2 grid-cols-1 gap-10">
    {
        datos.map(function(producto){
            return (
                <div class="border border-blue-800 rounded-md flex flex-col cursor-pointer">
                    <div class="h-1/2 mb-8 p-5 mx-auto">
                        <img src={producto.img} class="h-36 object-cover transition hover:scale-110" alt="">
                    </div>
                    <div class="flex flex-col gap-5 justify-center items-center">
                        <h2 class="font-bold text-xl text-slate-100">{producto.producto}</h2>
                        <p class="font-semibold text-lg text-slate-100">{producto.descripcion}</p>
                    </div>
                </div>
            )
        })
    }

</div>